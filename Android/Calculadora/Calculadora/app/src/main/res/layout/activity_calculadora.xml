<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculadora"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.julio.calculadora.CalculadoraActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789,"
            android:gravity="center"
            android:hint="@string/zero"
            android:inputType="numberDecimal"
            android:textSize="35sp"
            android:background="@android:color/transparent"
            android:id="@+id/edtPrimeiroNumero"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789,"
            android:gravity="center"
            android:hint="@string/zero"
            android:inputType="numberDecimal"
            android:textSize="35sp"
            android:background="@android:color/transparent"
            android:id="@+id/edtSegundoNumero"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/AppTheme.ButtonPrimaryDark"
        >

        <Button
            style="@style/AppTheme.ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/soma"
            android:id="@+id/btnSomar"
            android:layout_weight="1"
            />

        <Button
            style="@style/AppTheme.ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtracacao"
            android:id="@+id/btnSubtrair"
            android:layout_weight="1"
            />

        <Button
            style="@style/AppTheme.ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divisao"
            android:id="@+id/btnDividir"
            android:layout_weight="1"
            />

        <Button
            style="@style/AppTheme.ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiplicacao"
            android:id="@+id/btnMultiplicar"
            android:layout_weight="1"
            />

        <Button
            style="@style/AppTheme.ButtonAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnLimpar"
            android:id="@+id/btnLimpar"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/AppTheme.ButtonPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            style="@style/AppTheme.TextPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultado"
            android:gravity="center"
            android:id="@+id/txtResultado"
            />

    </LinearLayout>


</LinearLayout>
